<div class="container mt-5 mb-5">
  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5"><%= recipe.title %></h1>
        <div class="d-flex align-items-center gap-2">
          <span class="badge bg-primary fs-6"><%= recipe.category %></span>
          <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
          <form action="/recipes/<%= recipe.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Delete this recipe? This cannot be undone.');">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </div>
      </div>

      <div class="text-muted mb-4">
        <i class="bi bi-clock"></i> <%= recipe.cookTime %> |
        <i class="bi bi-people"></i> Serves <%= recipe.servings %> |
        <span class="badge bg-secondary"><%= recipe.difficulty %></span>
      </div>

      <hr>

      <p class="lead"><%= recipe.description %></p>

      <h4 class="mt-4">Ingredients</h4>
      <ul class="list-group list-group-flush mb-4">
        <% if ((recipe.ingredients || []).length === 0) { %>
          <li class="list-group-item text-muted fst-italic">No ingredients listed yet.</li>
        <% } else { %>
          <% (recipe.ingredients || []).forEach(item => { %>
            <li class="list-group-item"><%= item %></li>
          <% }) %>
        <% } %>
      </ul>

      <h4>Instructions</h4>
      <p style="white-space: pre-line"><%= recipe.instructions %></p>

      <div class="mt-4">
        <a href="/recipes" class="btn btn-outline-primary">
          <i class="bi bi-arrow-left"></i> Back to Recipes
        </a>
      </div>
    </div>
  </div>
</div>
